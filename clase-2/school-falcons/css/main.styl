@import url('https://fonts.googleapis.com/css?family=Raleway')

$color_falcon = #b71c1c;

*
  box-sizing: border-box

.underline--left
  position relative
  &:after
    content: ""
    position: absolute
    width:  30px
    height: 2px
    bottom -20px
    left    0
    background-color $color_falcon

.underline--center
  position relative
  &:after
    content: ""
    position: absolute
    width:  30px
    height: 2px
    bottom -20px
    left    50%
    margin-left -15px
    background-color $color_falcon

.btn--border
  padding-left 20px
  padding-right: 20px
  border-radius: 25px

.icon
  background-color: $color_falcon

h1, h2, h3, h4, h5
  color #212529

input, textarea
  font-family inherit

input:invalid
  border-color: lighten($color_falcon, 30%)
  background-color: lighten($color_falcon, 90%)

body
  font-family: 'Raleway', sans-serif
  font-size 1rem
  font-weight: 300
  color #5a6169

  .bienvenida
    min-height 100vh
    background url(../images/carousel-3.jpg) no-repeat center fixed
    background-size: cover
    position: relative

    &::before
      position: absolute
      content: ""
      top     0
      right:  0
      bottom: 0
      left    0
      opacity: 0.9
      background-color: #212529

    nav 
      .navbar-nav
        font-weight: 300

    @media (max-width: 992px)
      .header-social
        display: none

    @media (max-width: 768px)
      .contenido__wrapper
        width: 100%
        padding-left: 2em
        padding-right: 2em
        text-align center
        img 
          width 60%

  .caracteristicas
    width: 100%
    border-bottom: 1px solid #eaebed


    .caracteristicas__bg
      position relative  
      background url(../images/carousel-4.jpg) no-repeat center fixed
      background-size: cover
    
      &::before
        position: absolute
        content: ""
        top     0
        right:  0
        bottom: 0
        left    0
        opacity: 0.7
        background-color: #e9ecef

      img 
        position: absolute
        top  50%
        left 100%
        transform: translate(-50%, -50%)
        max-width: 270px  
        border-radius: 60px
        z-index 1

    .caracteristicas__inner
      width:      100%
      min-height: 700px
      padding-left:  180px
      padding-right: 50px

      .title
        font-size: 2rem

      .icon
        min-width:  65px
        height:     65px
        text-align   center
        line-height: 65px
        font-size:   27px
        box-shadow: 0 2px 8px rgba(33,37,41,.3)
        border-radius 50%
  
  .maestros
    min-height: 500px
    border-bottom: 1px solid #eaebed

    .avatar
      width: 100px
      height 100px
     

      img 
        width: 100%
        border-radius: 50px
        box-shadow: 0px 4px 15px rgba(33,37,41,.3)

  .testimonios-experiencias
    width: 100%
    min-height: 700px
    background-color #f9fafc

    .card
      border-radius 25px  
      transition 0.5s all ease
      
      &:hover
        box-shadow: 0 8px 15px rgba(33,37,41,.1)
        transform: scale(1.01)

      .card-img-top
        border-top-left-radius: 25px
        border-top-right-radius: 25px

      .button
        border-radius: 50px


  .newsletter
    form.input-group
      max-width: 500px

    .newsletter__input
      text-indent: 10px
      border-top-left-radius: 20px 
      border-bottom-left-radius: 20px

    .newsletter__btn
      border-top-right-radius: 15px !important
      border-bottom-right-radius: 15px !important

  .contacto
    height 100%
    background-color: #f9fafc

    .contacto-form
      background-color: #fff
      border-radius: 10px
      box-shadow: 0 5px 10px rgba(gray, 50%)


  @media (max-width: 992px)
    .caracteristicas__bg
      display none
    .caracteristicas__inner
      padding-left: 50px !important


   @media (max-width: 400px)
   .bienvenida
      .contenido__wrapper
        .contenido__wrapper--encabezado
          font-size: 2em

    .caracteristicas__inner
      padding-left: 10px !important
      padding-right: 10px !important

      article
        .icon
          display none   

  







      

        
        
    